<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="card">
			<div class="card-header d-flex justify-content-between">
				<h3>Group List</h3>
				<h5>
					<a class="float-end d-inline" asp-action="AddGroup">
						<button id="addRow" class="btn btn-dark"> Add New Group</button>
					</a>
				</h5>
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-dark">
					<thead>
						<tr>
							<th>Group Name</th>
							<th>Action</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						@foreach (var item in Model)
						{
							<tr>
								<td><strong>@item.Name</strong></td>
								<td><a class="badge bg-label-warning me-1" asp-action="Edit" asp-route-groupId="@item.Id">Edit</a></td>
								<td><a class="badge bg-label-danger me-1" asp-action="Delete" asp-route-groupId="@item.Id" onclick="confirmDelete()">Delete</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!--/ Bootstrap Dark Table -->
