<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="card">
			<div class="card-header d-flex justify-content-between">
				<h3>Users Data</h3>
				<h5>
					<a class="float-end d-inline" asp-action="AddUser">
						<button id="addRow" class="btn btn-dark"> Add New User</button>
					</a>
				</h5>
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-dark">
					<thead>
						<tr>
							<th>Full Name</th>
							<th>Email</th>
							<th>Group Name</th>
							<th>Action</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						@foreach (var item in Model)
						{
							<tr>
								<td><strong>@item.Name</strong></td>
								<td>@item.Email</td>
								<td>@item.GroupName</td>
								<td><a class="badge bg-label-warning me-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
								<td><a class="badge bg-label-danger me-1" asp-action="Delete" asp-route-id="@item.Id" onclick="confirmDelete()">Delete</a></td>
								@* <td> <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id=@item.Id>Edit</a></td>
							<td> <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id=@item.Id onclick="confirmDelete()">Delete</a></td>*@
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
