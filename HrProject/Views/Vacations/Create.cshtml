@model HrProject.ViewModels.VacationsViewModel
@{
    ViewData["Title"] = "Create";
}



<div class="container bg-light">
    <h3 class="text-center m-5 bg-gradient-faded-secondary-vertical  rounded">Vacations</h3>
    <form asp-action="Create" method="post" >


        
            <div class="form-group col-md-6">
                <div class="row">
                <label asp-for="Name" class="col-md-3 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
       
            <div class="form-group row mt-2">

                <label class="col-md-3 label-control text-black " for="projectinput7 ">Date</label>
                <div class="col-md-9">
                    <div class="position-relative has-icon-left">
                        <input asp-for="Date" type="date" class="form-control" name="Date" id="Date" />
                        <span asp-validation-for="Date" class="text-danger"> </span>
                        <div class="form-control-position">
                            <i class="ft-message-square"></i>
                        </div>
                    </div>

                </div>
        </div>

        <div class="text-center m-5 form-group ">
            <input type="submit" value="Add" class="btn btn-outline-primary w-20 font-weight-bold " />
        </div>
    </form>



</div>

<div class="card">
    <h5 class="card-header">Vacations</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Action</th>
							
                </tr>
            </thead>

            <tbody class="table-border-bottom-0">
                    @foreach (var item in Model.offvac)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name) </td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td><a class="badge bg-label-warning me-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                          <td>  <a class="badge bg-label-danger me-1" asp-action="Delete" asp-route-id="@item.Id" onclick="confirmDelete()">Delete</a></td>
                           
                        </tr>
                    }

            </tbody>



        </table>




    </div>
</div>
</div>


@section Scripts{
        <script>
            function confirmDelete() {
                var confirmMsg = confirm("Are you sure you want to Delete this Date?1");
                if (!confirmMsg) {
                    event.preventDefault();
                }

            }
        </script>
}