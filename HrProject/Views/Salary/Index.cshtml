@model SalaryReportAttendanceVM

<link href="~/lib/datatables/css/dataTables.bootstrap4.css" />
<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />

<div class="container">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Report/</span> Salary</h4>
	<hr />

	<table id="salaryReport" class="table table-striped table-bordered zero-configuration dt-responsive nowrap text-center" style="color: black; margin-top: 15px">
		<thead>
			<tr>
				<th>Name</th>
				<th>Department</th>
				<th>Salary</th>
				<th>Attendance Days</th>
				<th>Absent Days</th>
				<th>Over Time Price</th>
				<th>Discount Time Price</th>
				<th>Total Salary</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>

			<tr>
				<td>@Model.EmpName</td>
				<td>@Model.DeptName</td>
				<td>@Model.Salary.ToString("C")</td>
				<td>@Model.AttendanceDays</td>
				<td>@Model.AbsentDays</td>
				<td>@Model.OverTimePrice.ToString("C")</td>
				<td>@Model.DeductionTimePrice.ToString("C")</td>
				<td>@Model.total.ToString("C")</td>
				<td>
					<div class="d-flex ">
						<a class="btn btn-primary mr-1">+ Invoice</a>
					</div>
				</td>
			</tr>

		</tbody>
	</table>
</div>
@section Scripts{
	<script>
		$(document).ready(function () {
			$("#salaryReport").dataTable();
		})
	</script>


	<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
	<script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

}

